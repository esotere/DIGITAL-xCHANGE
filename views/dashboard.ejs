<div class="container logout">
    <div class="form-group">
        <!-- <a href="/users/logout" class="btn btn-secondary">Logout</a> -->
        <button Id="logout" type="submit" class="btn btn-secondary btn-block"
           onclick="window.location.href='/users/logout'" action="/users/logout" method="GET">logout</button>
            </div>
</div>

<div class="container outer-content">
    <div id="content" class="content">
        <div id="initial-row" class="row">
            <div class="col-md-3 content-group">
                <label for="Transfer Date">*Transfer Date
                <input id="date" type="date" name="transfer date" value="yyyy-MM-dd" min="2019-03-26"
                    placeholder="" required>
                    <span class="validity"></span>
                </label><br>
            </div>

            <!-- <div class="col-md-3 content-group">
                <label for="Transfer Date">*Transfer Date</label><br>
                <input id="date" type="date" name="transfer date" value="yyyy-MM-dd" min="2019-03-26"
                    placeholder="" required>
            </div> -->
            <div id="phoneOne" class="col-md-2 content-group">
                <!-- <h5 class="sphone-1"><strong>Sender Phone Number: </strong><span id="sphone-1"></span></h5> -->
                <label for="Sender Phone Number">*Sender Phone Number</label><br>
                <input id="phone-1" type="text" class="inputBox" placeholder="" name="Sender Phone Number" value= <%= user.phoneNumber %> required="required" readonly/>
            </div>
            <div class="col-md-4 content-group">
                <label for="Recipient Phone Number">*Recipient Phone Number</label><br>
                <input id="phone-2" type="text" class="inputBox" placeholder="" name="Recipient Phone Number" required="required"/>
            </div>
            <div class="col-md-3 content-group">
                <label for="Transfer Amount">*Transfer Amount</label><br>
                <input type="number" step="any" class="inputBox" id="amt" placeholder="â‚¦"
                    name="Transfer Amount" required="required"/>
            </div>
        </div>
    </div>
    <div class="glyph">
        <a href="" class="glyphicon glyphicon-plus" aria-hidden="true"> Add Recipient</a>
    </div>
    <div class=" submit submit-btn-wrapper">
        <button id="transfer" class="button btn btn-sm btn-success transfer">TRANSFER</button>
        <button id="cancel" class="button btn btn-sm btn-danger cancel" type="reset" value="reset">CANCEL</button>
    </div>


</div>
<div class="container ">
    <div class="row content info">
        <div id="transactInfoHead" class="col-md-12"><b>Transaction Summary</b></div>        
    </div>

    <div id="summaryInfo" class="row content info">
        <div id="transactDate" class="col-md-2"><b>Transaction Date</b></div>
        <div id="transactInfo" class="col-md-3"><b>Transaction Info</b></div>
        <div id="initialAcctBal" class="col-md-3"><b>Initial Balance</b></div>
        <div id="newAcctBal" class="col-md-2"><b>Post Transaction Balance</b></div>
        <div id="transactAmt" class="col-md-2"><b>Transaction Amount</b></div>
        
    </div>
    
</div>
<div class="container ">
    <div id="transaction_summary" class="row content info2">
        <div id="transactionDate" class="col-md-3"><b>Transaction Date</b></div>
        <div id="transactionInfo" class="col-md-6"><b>Transaction Info</b></div>
        <div id="transactionAmt" class="col-md-3"><b>Transaction Amount</b></div>

    </div>
</div>